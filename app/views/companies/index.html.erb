<h1 class="mt-3 text-xl font-bold text-gray-700">Companys</h1>

<ul class='mt-2'>
  <% @companies.each do |company| %>
    <li>
      <%= link_to company.name, company, class: 'block px-1 py-1 hover:bg-gray-200 rounded' %>
    </li>
  <% end %>

  <li class='mt-2 pt-2 border-t border-gray-300'>
    <%= link_to 'Add new company', new_company_path, class: 'btn btn--primary' %>
  </li>
</ul>

