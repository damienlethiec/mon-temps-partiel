<%= form_with model: company do |form| %>
  <%= render "shared/flash", flash: company.errors %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, required: true, placeholder: "Your company name", class: "input" %>
  </div>

  <div class="buttons">
    <%= form.submit class: "btn btn--primary"%>
  </div>
<% end %>

